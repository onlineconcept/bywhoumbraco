@model object
@inject ResourceHelper rh
@{
    ViewBag.Title = "title";
    Layout = "_CheckoutLayout";
}
<checkout-wrap>
    <v-layout wrap>
        <v-flex md5 lg7 xs12>
            <v-btn flat><a href="/" style="color:lightslategray;text-decoration: none;display: flex; align-items: center;"><v-icon>arrow_back</v-icon>@(await rh.GetResource("Checkout.Information.BackLink"))</a></v-btn>

            <checkout-information :step="1"></checkout-information>
        </v-flex>
        <v-flex offset-lg1 offset-md1 md6 lg4 xs12>
            <basket :checkout="true" :step="1"></basket>
        </v-flex>
    </v-layout>
</checkout-wrap>
